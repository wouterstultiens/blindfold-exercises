{
  "name": "blindfold-exercises",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "puzzles:build": "node scripts/build-puzzle-db.mjs",
    "puzzles:build:blindfold": "node scripts/build-puzzle-db.mjs --reset --max-pieces 7 --max-plies 4 --sources lichess,tablebase --tablebase-budget 250"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.2",
    "chess.js": "^1.4.0",
    "react": "^18.3.1",
    "react-chessboard": "^4.7.3",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "jsdom": "^26.0.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vite-plugin-pwa": "^0.21.1",
    "vitest": "^3.0.5"
  }
}
